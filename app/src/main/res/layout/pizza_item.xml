<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:padding="@dimen/common_padding_default"
    app:cardElevation="@dimen/common_padding_micro"
    app:cardCornerRadius="@dimen/common_padding_min"
    android:layout_margin="@dimen/common_padding_min"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/ivPizza"
            tools:src="@drawable/pizza"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            tools:text="12s"
            android:gravity="center"
            android:padding="@dimen/common_padding_default"
            android:background="@drawable/textview_shape"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPizza"
            android:layout_marginTop="-30dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            tools:text="Especial"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/carter_one"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            android:layout_marginTop="@dimen/common_padding_min"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCustom"
            android:text="@string/custom"
            app:backgroundTint="@color/green_500"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_marginTop="@dimen/common_padding_default"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/common_padding_default"
            app:layout_constraintEnd_toStartOf="@id/btnAddCar"

            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddCar"
            app:icon="@drawable/ic_shopping_cart"
            app:iconTint="@color/green_500"
            app:strokeWidth="1dp"
            app:strokeColor="@color/green_500"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toEndOf="@id/btnCustom"
            android:layout_marginTop="@dimen/common_padding_default"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>